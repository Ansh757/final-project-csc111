<MyGrid>
    GridLayout:
        rows:4
        size: root.width, root.height

        Button:
            background_normal:"title_image.jpg"
            on_press: root.image_appear()

        GridLayout:
            rows:1

            Button:
                id: my_movie1
                on_release: root.btn()
                background_color: 0,0,0,0
                AsyncImage:
                    id:my_image1
                    source: "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn.hipwallpaper.com%2Fi%2F32%2F65%2F3SnbK1.png"
                    width: 2300
                    height: 600
                    allow_stretch: "True"
            Button:
                id: my_movie2
                on_release: root.btn2()
                background_color: 0,0,0,0
                AsyncImage:
                    id:my_image2
                    source: "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn.hipwallpaper.com%2Fi%2F32%2F65%2F3SnbK1.png"
                    width: 1400
                    height: 590

            Button:
                id: my_movie3
                on_release: root.btn3()
                background_color: 0,0,0,0
                AsyncImage:
                    id:my_image3
                    source: "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn.hipwallpaper.com%2Fi%2F32%2F65%2F3SnbK1.png"
                    height: 600
                    width: 500
                    allow_stretch: True
                    keep_ratio: True

<P>:
    Button:
        text: "Click to watch the Trailer"
        on_release: root.ytube()
        size_hint: 0.8, 0.1
        pos_hint:{"x":0.1, "y":0.8}
    Button:
        text: "Click Here For the Description"
        on_press: root.text1()
        size_hint: 0.85, 0.1
        pos_hint: {"x":0.1, "y": 0.5}
    Button:
        text: "Click Here For the Reviews"
        on_press: root.review1()
        size_hint: 0.8, 0.1
        pos_hint: {"x":0.1, "y": 0.2}



