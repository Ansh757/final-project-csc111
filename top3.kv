<MyGrid>
    GridLayout:
        rows:4
        size: root.width, root.height
        Image:
            source:"title_image.jpg"
        GridLayout:
            rows:1

            Button:
                on_release: root.btn()
                background_normal: "download.jpg"

            Button:
                on_release: root.btn2()
                background_normal: "download1.jpg"

            Button:
                on_release: root.btn3()
                background_normal: "download 2.jpg"


<P>:
    Button:
        text: "Click to watch the Trailer"
        on_release: root.ytube()
        size_hint: 0.8, 0.1
        pos_hint:{"x":0.1, "y":0.8}
    Button:
        text: "Click Here For the Description"
        on_press: root.text1()
        size_hint: 0.85, 0.1
        pos_hint: {"x":0.1, "y": 0.5}
    Button:
        text: "Click Here For the Reviews"
        on_press: root.review1()
        size_hint: 0.8, 0.1
        pos_hint: {"x":0.1, "y": 0.2}



