<MyGrid>
    GridLayout:
        rows:4
        size: root.width, root.height

        Button:
            background_normal:"title_image.jpg"
            on_press: root.image_appear()

        GridLayout:
            rows:1

            Button:
                id: my_movie1
                on_release: root.btn()
                AsyncImage:
                    id:my_image1
                    source: "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fthestayathomechef.com%2Fwp-content%2Fuploads%2F2019%2F01%2FOatmeal-Pancakes-3.jpg"


            Button:
                id: my_movie2
                on_release: root.btn2()
                AsyncImage:
                    id:my_image2
                    source: "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fthestayathomechef.com%2Fwp-content%2Fuploads%2F2019%2F01%2FOatmeal-Pancakes-3.jpg"


            Button:
                id: my_movie3
                on_release: root.btn3()
                AsyncImage:
                    id:my_image3
                    source: "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fthestayathomechef.com%2Fwp-content%2Fuploads%2F2019%2F01%2FOatmeal-Pancakes-3.jpg"



<P>:
    Button:
        text: "Click to watch the Trailer"
        on_release: root.ytube()
        size_hint: 0.8, 0.1
        pos_hint:{"x":0.1, "y":0.8}
    Button:
        text: "Click Here For the Description"
        on_press: root.text1()
        size_hint: 0.85, 0.1
        pos_hint: {"x":0.1, "y": 0.5}
    Button:
        text: "Click Here For the Reviews"
        on_press: root.review1()
        size_hint: 0.8, 0.1
        pos_hint: {"x":0.1, "y": 0.2}



